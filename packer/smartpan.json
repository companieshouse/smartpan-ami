{
    "_comment": "Default variable values should be overriden using variables file",
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_profile": "default",
        "aws_instance_type": "t2.small",
        "ansible_host_alias": "smartpan",
        "version": "{{env `VERSION`}}",
        "resources_bucket": "{{env `RESOURCES_BUCKET`}}",
        "smartpan_bucket_path": "{{env `CONCOURSE_BUCKET_PATH`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `aws_profile`}}",
            "region": "{{user `aws_region`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "CentOS Linux 7 x86_64 HVM*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "679593333241"
                ],
                "most_recent": true
            },
            "instance_type": "{{user `aws_instance_type`}}",
            "ssh_username": "ubuntu",
            "ami_name": "smartpan-ami-{{user `version`}}",
            "subnet_filter": {
              "filters": {
                "tag:Name": "dev-management-private-{{user `aws_region`}}a"
              }
            },
            "security_group_filter": {
              "filters": {
                "group-name": "packer-builders-{{user `aws_region`}}"
              }
            },
            "tags": {
                "Name": "smartpan-ami-{{user `version`}}",
                "Builder": "packer"
            },
            "snapshot_tags": {
                "Name": "smartpan-ami-snapshot-{{user `version`}}",
                "Builder": "packer"
            },
            "iam_instance_profile": "packer-builder-resources-{{user `aws_region`}}"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "host_alias": "{{user `ansible_host_alias`}}",
            "groups": [
                "smartpan"
            ],
            "extra_arguments": [
                "--vault-password-file", "/home/packer/vault",
                "--extra-vars", "aws_region={{user `aws_region`}} resources_bucket={{user `resources_bucket`}} smartpan_bucket_path={{user `smartpan_bucket_path`}}"
            ],
            "playbook_file": "../ansible/smartpan.yml"
        }
    ]
}

